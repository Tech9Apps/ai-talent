{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*", "../shared/**/*"],
   "exclude": [
    "../node_modules/**/*",
    "../src/**/*",
    "node_modules/**/*",
    "lib/**/*"
  ]
}
